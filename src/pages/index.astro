---
import { Image, getImage } from "astro:assets"
import Layout from "@/layouts/Layout.astro"
import Link from "@/components/Link.astro"
import studevsTalk from "@/assets/images/studevs-talk.png"
import SocialMedia from "@/components/SocialMedia.astro"
import Container from "@/components/Container.astro"

const ME = {
  name: "Jacob Flores",
  role: "Frontend Developer",
  company: {
    name: "AIA Partners",
    web: "https://www.aiapartner.com/",
  },
}

// https://astro.build/blog/images/
const optimizedBackgroundImage = await getImage({
  src: studevsTalk,
  quality: "max",
})

const gradient =
  "linear-gradient(180deg, rgba(0, 0, 0, 0.38) 0%, rgba(11, 7, 24, 0.77) 45.83%, rgba(11, 7, 25, 0.82) 58.85%, #0b0b0b 80.73%)"
const reversedGradient =
  "linear-gradient(180deg, rgba(0, 0, 0, 0.38) 0%, rgba(11, 7, 24, 0.77) 45.83%, rgba(11, 7, 25, 0.82) 58.85%, #0b0b0b 80.73%)"
const backgroundImage = `url('${optimizedBackgroundImage.src}')`
---

<Layout>
  <section
    class="main-section w-full top-0 min-h-screen z-0 bg-cover bg-center bg-no-repeat flex items-center pt-20"
    style={`background-image: ${gradient}, ${backgroundImage}`}
  >
    <Container
      class="flex flex-col gap-4 md:gap-12 justify-center md:items-center h-full max-w-3xl"
    >
      <div class="flex flex-col gap-8 text-lg md:items-center">
        <header class="w-full mx-auto flex md:items-center flex-col">
          <h1 class="text-7xl font-black text-blue-400">Jacob Flores</h1>
          <p class="text-2xl w-fit">
            <strong>{ME.role}</strong>
            {
              ME.company?.name && (
                <>
                  at
                  <Link href={ME.company.web} target="_blank">
                    <strong> {ME.company.name}</strong>
                  </Link>
                </>
              )
            }
          </p>
        </header>
      </div>
      <!-- <Image
        src={studevsTalk}
        alt="Delivering a presentation at the Engineering Faculty Auditorium, Autonomum University of San Luis PotosÃ­."
        quality="max"
        class="aspect-video object-cover h-full rounded-xl object-left-bottom brightness-110"
      /> -->
      <SocialMedia />
    </Container>
  </section>
  <Container class="pb-16" style={`background-image: ${reversedGradient}`}>
    <section class="flex flex-col gap-4">
      <h1 class="text-6xl font-black text-blue-300">About Me</h1>
      <p>
        Hi there! I'm Jacob and
        <strong> I'm passionate about web development and technology</strong>.
      </p>
      <p>
        I love being part of a community, sharing my knowledge, and learning
        from others. Lately, I've participated in <strong>hackathons</strong>
         and <strong> given talks to my university peers</strong>, being part of
        a community known as
        <Link href="https://www.linkedin.com/company/studevs" target="_blank">
          <strong>Studevs</strong>
        </Link>.
      </p>
    </section>
  </Container>

