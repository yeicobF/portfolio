---
import { GRADIENTS } from "@/consts"
import Link from "./Link.astro"
import Logo from "./Logo.astro"
import SocialMedia from "./SocialMedia.astro"
---

<footer
  class="flex flex-col sm:flex-row items-center text-center sm:text-start justify-between gap-4 pb-8 px-6 w-full max-w-7xl
md:px-20 mx-auto"
  style={`background-image: ${GRADIENTS.reversed}`}
>
  <div
    class="flex flex-col items-center sm:flex-row gap-4 sm:gap-8 sm:items-center"
  >
    <a href="/#" class="flex items-center">
      <Logo class="text-3xl" />
    </a>
    <div class="text-slate-400">
      Built with <Link target="_blank" href="https://astro.build/">Astro</Link>
       and
      <Link target="_blank" href="https://tailwindcss.com/">Tailwind CSS</Link>.
      Hosted on
      <Link target="_blank" href="https://vercel.com/">Vercel</Link>.
    </div>
  </div>
  <SocialMedia />
</footer>
