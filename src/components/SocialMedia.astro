---
import GitHubLogo from "@/icons/GitHub.astro"
import EmailLogo from "@/icons/Email.astro"
import LinkedInLogo from "@/icons/LinkedIn.astro"

// https://docs.astro.build/en/guides/styling/#passing-a-class-to-a-child-component
const { class: className } = Astro.props

const SOCIAL_MEDIA = [
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/jacob--flores",
    icon: LinkedInLogo,
  },
  {
    name: "GitHub",
    url: "https://github.com/yeicobF",
    icon: GitHubLogo,
  },
  {
    name: "Email",
    url: "mailto:jacobfloresrdz@gmail.com",
    icon: EmailLogo,
  },
]
---

<footer
  class:list={[
    "flex items-center gap-8 w-full justify-start md:justify-center",
    className,
  ]}
>
  {
    SOCIAL_MEDIA.map(({ url, name, icon: Icon }) => (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class="text-white w-8 h-8 hover:text-sky-400 transition-colors duration-200"
        aria-label={name}
      >
        <Icon />
      </a>
    ))
  }
</footer>
