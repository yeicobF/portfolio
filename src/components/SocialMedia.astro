---
import GitHubLogo from "@/icons/GitHub.astro"
import EmailLogo from "@/icons/Email.astro"
import LinkedInLogo from "@/icons/LinkedIn.astro"

interface Props {
  size?: "sm" | "md" | "lg"
  class?: string
}

// https://docs.astro.build/en/guides/styling/#passing-a-class-to-a-child-component
const { size = "sm", class: className } = Astro.props

const sizes = {
  sm: "w-6 h-6",
  md: "w-8 h-8",
  lg: "w-12 h-12",
}

const SOCIAL_MEDIA = [
  {
    name: "LinkedIn",
    url: "https://www.linkedin.com/in/jacob--flores",
    icon: LinkedInLogo,
  },
  {
    name: "GitHub",
    url: "https://github.com/yeicobF",
    icon: GitHubLogo,
  },
  {
    name: "Email",
    url: "mailto:jacobfloresrdz@gmail.com",
    icon: EmailLogo,
  },
]
---

<section class:list={["flex items-center gap-8", className]}>
  {
    SOCIAL_MEDIA.map(({ url, name, icon: Icon }) => (
      <a
        href={url}
        target="_blank"
        rel="noopener noreferrer"
        class:list={[
          "text-white hover:text-sky-400 transition-colors duration-200",
          sizes[size],
        ]}
        aria-label={name}
      >
        <Icon />
      </a>
    ))
  }
</section>
