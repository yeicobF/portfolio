---
import Logo from "@/components/Logo.astro"

type Section = {
  name: string
  url: string
  display?: boolean
}

const SECTIONS: Section[] = [
  {
    name: "Home",
    url: "/#",
    display: true,
  },
  {
    name: "About",
    url: "/#about",
    display: true,
  },
  {
    name: "Experience",
    url: "/#experience",
    display: true,
  },
  {
    name: "Projects",
    url: "/#projects",
    display: true,
  },
]
---

<header class="fixed top-0 z-50 w-full py-1 backdrop-blur-sm md:py-2">
  <nav
    class="mx-auto flex w-full
max-w-7xl items-baseline justify-between gap-8 px-6 md:px-20"
  >
    <a href="/#" class="text-2xl sm:text-3xl">
      <Logo />
    </a>

    <ul
      class="flex flex-wrap items-center justify-end gap-x-4 text-sm sm:gap-x-8"
    >
      {
        SECTIONS.map(
          ({ url, name, display }) =>
            display && (
              <li class="underline-offset-8 hover:underline">
                <a href={url}>{name}</a>
              </li>
            ),
        )
      }
    </ul>
  </nav>
</header>
