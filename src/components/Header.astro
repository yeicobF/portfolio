---
import Logo from "@/components/Logo.astro"

type Section = {
  name: string
  url: string
  display?: boolean
}

const SECTIONS: Array<Section> = [
  {
    name: "About",
    url: "#about",
  },
  {
    name: "Experience",
    url: "#experiencie",
  },
  {
    name: "Projects",
    url: "#projects",
  },
]
---

<header class="w-full absolute sm:fixed top-0 z-50 py-4 md:py-4">
  <nav class="px-6 w-full max-w-7xl
md:px-20 mx-auto justify-between flex gap-8">
    <a href="/#" class="text-3xl">
      <Logo />
    </a>

    <ul class="hidden md:flex items-center gap-8 text-sm">
      {
        SECTIONS.map(
          ({ url, name, display }) =>
            display && (
              <li class="font-light hover:underline underline-offset-8">
                <a href={url}>{name}</a>
              </li>
            ),
        )
      }
    </ul>
  </nav>
</header>
