---
import Logo from "@/components/Logo.astro"

type Section = {
  name: string
  url: string
  display?: boolean
}

const SECTIONS: Section[] = [
  {
    name: "Home",
    url: "/#",
    display: true,
  },
  {
    name: "About",
    url: "/#about",
    display: true,
  },
  {
    name: "Experience",
    url: "/#experience",
    display: true,
  },
  {
    name: "Projects",
    url: "/#projects",
    display: true,
  },
]
---

<header class="w-full fixed top-0 z-50 py-1 md:py-2 backdrop-blur-sm">
  <nav
    class="px-6 w-full max-w-7xl
md:px-20 mx-auto justify-between flex gap-8 items-baseline"
  >
    <a href="/#" class="text-2xl sm:text-3xl">
      <Logo />
    </a>

    <ul
      class="flex items-center justify-end flex-wrap gap-x-4 sm:gap-x-8 text-sm"
    >
      {
        SECTIONS.map(
          ({ url, name, display }) =>
            display && (
              <li class="hover:underline underline-offset-8">
                <a href={url}>{name}</a>
              </li>
            ),
        )
      }
    </ul>
  </nav>
</header>
