---
import Link from "./Link.astro"
import type { LinkProps } from "@/types"

type Props = {
  size?: "sm" | "md" | "lg"
  class?: string
} & LinkProps

const { href, size = "md", class: className } = Astro.props

const sizes = {
  sm: "text-sm h-5",
  md: "text-base h-6",
  lg: "text-lg h-7",
}
---

<Link
  href={href}
  class:list={["flex gap-2 justify-items-center w-fit", sizes[size], className]}
>
  <slot />
</Link>
