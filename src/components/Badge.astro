---
interface Props {
  variant?: "primary" | "secondary"
}

const { variant = "primary" } = Astro.props

const variants = {
  primary: "text-blue-100 bg-blue-950",
  secondary: "text-blue-100 bg-sky-800",
}
---

<article
  class:list={["text-sm rounded-full py-1 px-3 font-medium", variants[variant]]}
>
  <slot />
</article>
