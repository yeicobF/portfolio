---
type Props = {
  variant?: "primary" | "secondary"
  size?: "sm" | "md" | "lg"
}

const { variant = "primary", size = "md" } = Astro.props

const variants = {
  primary: "text-blue-100 bg-gradient-to-bl from-teal-500 to-teal-950",
  secondary: "text-teal-200 bg-teal-950",
}

const sizes = {
  sm: "text-xs",
  md: "text-sm",
  lg: "text-base",
}
---

<article
  class:list={[
    "rounded-full px-3 py-1 font-medium",
    sizes[size],
    variants[variant],
  ]}
>
  <slot />
</article>
